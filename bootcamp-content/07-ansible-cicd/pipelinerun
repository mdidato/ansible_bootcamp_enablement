apiVersion: tekton.dev/v1
kind: PipelineRun
metadata:
  generateName: ansible-run-
  namespace: aap
  labels:
    tekton.dev/pipeline: simple-ansible-pipeline
spec:
  params:
    - name: playbook-repo
      value: 'https://github.com/mdidato/ansible_bootcamp_enablement.git'
  pipelineRef:
    name: simple-ansible-pipeline
  taskRunTemplate:
    serviceAccountName: pipeline
  timeouts:
    pipeline: 1h0m0s
  workspaces:
    - name: shared-workspace
      volumeClaimTemplate:
        metadata:
          creationTimestamp: null
        spec:
          accessModes:
            - ReadWriteOnce
          resources:
            requests:
              storage: 1Gi
          storageClassName: ocs-external-storagecluster-ceph-rbd
          volumeMode: Filesystem